{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 500,
  "title": "Monthly Public Transport Patronage for Regional Modes",
  "data": {
    "url": "https://raw.githubusercontent.com/AwSumYin/FIT3179Visualisation2/refs/heads/main/Monthly%20public%20transport%20patronage%20by%20mode_21082024.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2018,
      "bind": {
        "input": "select",
        "options": [2018, 2019, 2020, 2021, 2022, 2023],
        "labels": ["2018", "2019", "2020", "2021", "2022", "2023"],
        "name": "Year: "
      }
    },
    {
      "name": "Transport_mode_selection",
      "value": "Metropolitan train",
      "bind": {
        "input": "select",
        "options": [
          "Metropolitan train",
          "Metropolitan tram",
          "Metropolitan bus",
          "Regional train",
          "Regional coach",
          "Regional bus"
        ],
        "labels": [
          "Train",
          "Tram",
          "Bus",
          "Regional Train",
          "Regional Coach",
          "Regional Bus"
        ],
        "name": "Transport Mode: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year == Year_selection"},
    {
      "calculate": "datum[Transport_mode_selection]",
      "as": "Patronage"
    }
  ],
  "layer": [
    {
      "mark": {"type": "line", "point": true, "interpolate": "monotone"},
      "encoding": {
        "x": {
          "field": "Month name",
          "type": "ordinal",
          "sort": [
            "January", "February", "March", "April", "May", "June",
            "July", "August", "September", "October", "November", "December"
          ],
          "title": "Month"
        },
        "y": {
          "field": "Patronage",
          "type": "quantitative",
          "title": "Patronage Count"
        },
        "color": {
          "field": "Year",
          "type": "ordinal",
          "scale": {"scheme": "category10"},
          "legend": null
        },
        "tooltip": [
          {"field": "Month name", "type": "nominal", "title": "Month"},
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {"field": "Patronage", "type": "quantitative", "title": "Patronage"}
        ]
      }
    },
    {
      "mark": {"type": "text", "align": "center", "dy": -10},
      "encoding": {
        "x": {
          "field": "Month name",
          "type": "ordinal",
          "sort": [
            "January", "February", "March", "April", "May", "June",
            "July", "August", "September", "October", "November", "December"
          ]
        },
        "y": {"field": "Patronage", "type": "quantitative"},
        "text": {"field": "Patronage", "type": "quantitative"}
      }
    },
    {
      "transform": [
        {"filter": "Year_selection == 2018"},
        {"filter": "Transport_mode_selection == 'Metropolitan train'"}
      ],
      "mark": {"type": "text", "dy": -10, "dx": 25, "color": "red", "fontSize": 12, "fontWeight": "bold"},
      "encoding": {
        "x": {"datum": "January", "type": "ordinal"},
        "y": {"datum": 16000000, "type": "quantitative"},
        "text": {"value": "Less people working"}
      }
    },
    {
      "transform": [
        {"filter": "Year_selection == 2018"},
        {"filter": "Transport_mode_selection == 'Metropolitan train'"}
      ],
      "mark": {"type": "text", "dy": 15, "dx": -25, "color": "red", "fontSize": 12, "fontWeight": "bold"},
      "encoding": {
        "x": {"datum": "December", "type": "ordinal"},
        "y": {"datum": 17000000, "type": "quantitative"},
        "text": {"value": "Low due to holidays"}
      }
    }
  ]
}
