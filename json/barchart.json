{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 500,
  "title": "Monthly Public Transport Patronage for Regional Modes",
  "data": {
    "url": "https://raw.githubusercontent.com/AwSumYin/homeworkassessmentwk10/refs/heads/main/Monthly%20public%20transport%20patronage%20by%20mode_21082024.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2018,
      "bind": {
        "input": "select",
        "options": [2018, 2019, 2020],
        "labels": ["2018", "2019", "2020"],
        "name": "Select Year: "
      }
    },
    {
      "name": "Transport_mode_selection",
      "value": "Metropolitan train",
      "bind": {
        "input": "select",
        "options": [
          "Metropolitan train",
          "Metropolitan tram",
          "Metropolitan bus",
          "Regional train",
          "Regional coach",
          "Regional bus"
        ],
        "labels": [
          "Train",
          "Tram",
          "Bus",
          "Regional Train",
          "Regional Coach",
          "Regional Bus"
        ],
        "name": "Select Transport Mode: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year == Year_selection"},
    {
      "calculate": "toNumber(replace(datum[Transport_mode_selection], ',', ''))",
      "as": "Patronage"
    },
    {"filter": "isValid(datum.Patronage) && datum.Patronage > 0"}
  ],
  "layer": [
    {
      "mark": {"type": "bar", "width": 20},
      "encoding": {
        "x": {
          "field": "Month name",
          "type": "nominal",
          "sort": [
            "January",
            "February",
            "March",
            "April",
            "May",
            "June",
            "July",
            "August",
            "September",
            "October",
            "November",
            "December"
          ],
          "title": "Month"
        },
        "y": {
          "field": "Patronage",
          "type": "quantitative",
          "title": "Patronage Count"
        },
        "color": {
          "field": "Month name",
          "type": "nominal",
          "title": "Month",
          "scale": {"scheme": "dark2"},
          "sort": [
            "January",
            "February",
            "March",
            "April",
            "May",
            "June",
            "July",
            "August",
            "September",
            "October",
            "November",
            "December"
          ],
          "legend": {
            "title": "Month",
            "orient": "right",
            "direction": "vertical"
          }
        },
        "tooltip": [
          {"field": "Month name", "type": "nominal", "title": "Month"},
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {"field": "Patronage", "type": "quantitative", "title": "Patronage"}
        ]
      }
    },
    {
      "mark": {"type": "text", "align": "center", "dy": -10},
      "encoding": {
        "x": {
          "field": "Month name",
          "type": "nominal",
          "sort": [
            "January",
            "February",
            "March",
            "April",
            "May",
            "June",
            "July",
            "August",
            "September",
            "October",
            "November",
            "December"
          ]
        },
        "y": {"field": "Patronage", "type": "quantitative"},
        "text": {"field": "Patronage", "type": "quantitative"}
      }
    }
  ],
  "config": {}
}