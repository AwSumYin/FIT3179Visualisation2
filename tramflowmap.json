{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Tram Routes",
  "width": 500,
  "height": 550,
  "background": "#b3e5fc",
  "params": [
    {
      "name": "zoom_level",
      "value": 280000,
      "bind": {
        "input": "range",
        "min": 1500,
        "max": 400000,
        "name": "Zoom Level: "
      }
    },
    {
      "name": "center_to",
      "value": [144.961, -37.81],
      "bind": {
        "input": "select",
        "options": [
          [144.961, -37.81],
          [150.8656, -33.8675]
        ],
        "labels": ["Victoria", "New South Wales"],
        "name": "Select Region: "
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "scale": {"expr": "zoom_level"},
    "center": {"expr": "center_to"}
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/AwSumYin/FIT3179Visualisation2/refs/heads/main/GCCSA_2021_AUST_GDA2020.json",
        "format": {"type": "topojson", "feature": "GCCSA_2021_AUST_GDA2020"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#d3d3d3",
        "stroke": "darkgray",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "values": [
          {"state": "Victoria", "longitude": 144.9531, "latitude": -37.8436},
          {"state": "New South Wales", "longitude": 150.8490, "latitude": -33.8888}
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 18,
        "fontWeight": "bold",
        "color": "black"
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "state", "type": "nominal"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/AwSumYin/FIT3179Visualisation2/refs/heads/main/nsw%20tram%20routes.csv",
        "format": {"type": "csv"}
      },
      "mark": {
        "type": "circle",
        "color": "blue",
        "size": 100
      },
      "encoding": {
        "longitude": {"field": "start_lon", "type": "quantitative"},
        "latitude": {"field": "start_lat", "type": "quantitative"},
        "tooltip": [
          {"field": "route_long_name", "type": "nominal", "title": "Tram Route (NSW)"},
          {"field": "route_length", "type": "quantitative", "title": "Route Length (km)"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/AwSumYin/FIT3179Visualisation2/refs/heads/main/vic%20tram%20routes.csv",
        "format": {"type": "csv"}
      },
      "mark": {
        "type": "circle",
        "color": "green",
        "size": 100
      },
      "encoding": {
        "longitude": {"field": "start_lon", "type": "quantitative"},
        "latitude": {"field": "start_lat", "type": "quantitative"},
        "tooltip": [
          {"field": "name", "type": "nominal", "title": "Tram Route Name"}
        ]
      }
    }
  ]
}
